<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
		version="3.1">
		
		<servlet>
			<servlet-name>Second</servlet-name>
			<servlet-class>com.itvdn.ex002_servlet.SecondServlet</servlet-class>
		</servlet>
		<servlet-mapping>
			<servlet-name>Second</servlet-name>
			<url-pattern>/second</url-pattern>
		</servlet-mapping>
		
		<servlet>
			<servlet-name>Param</servlet-name>
			<servlet-class>com.itvdn.ex003_servlet_params.SecondServlet</servlet-class>
		</servlet>
		<servlet-mapping>
			<servlet-name>Param</servlet-name>
			<url-pattern>/params</url-pattern>
		</servlet-mapping>
		
		<servlet>
			<servlet-name>ParamsEnum</servlet-name>
			<servlet-class>com.itvdn.ex004_params.SecondServlet</servlet-class>
		</servlet>
		<servlet-mapping>
			<servlet-name>ParamsEnum</servlet-name>
			<url-pattern>/params_enum</url-pattern>
		</servlet-mapping>
		
		<servlet>
			<servlet-name>Arif</servlet-name>
			<servlet-class>com.itvdn.ex005_error.ArifmeticServlet</servlet-class>
		</servlet>
		<servlet-mapping>
			<servlet-name>Arif</servlet-name>
			<url-pattern>/arifmetic</url-pattern>
		</servlet-mapping>
		
		<servlet>
			<servlet-name>Thread</servlet-name>
			<servlet-class>com.itvdn.ex006_servlet_multithreading.ArifmeticServlet</servlet-class>
		</servlet>
		<servlet-mapping>
			<servlet-name>Thread</servlet-name>
			<url-pattern>/arifmetic_mult</url-pattern>
		</servlet-mapping>
		
		<error-page>
			<error-code>404</error-code>
			<location>/error.html</location>
		</error-page>
		
		<error-page>
			<error-code>400</error-code>
			<location>/error.html</location>
		</error-page>
		

		</web-app>